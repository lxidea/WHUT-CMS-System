# Database Configuration
POSTGRES_DB=cms_whut
POSTGRES_USER=cms_user
POSTGRES_PASSWORD=cms_password
DATABASE_URL=postgresql://cms_user:cms_password@localhost:5432/cms_whut

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production
DEBUG=true
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Spider Configuration
SPIDER_USER_AGENT=Mozilla/5.0 (compatible; WHUT-CMS-Spider/1.0)
SPIDER_DOWNLOAD_DELAY=2
CONCURRENT_REQUESTS=8

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@cms-whut.local

# DDNS Configuration (for production)
DDNS_DOMAIN=your-domain.ddns.net
